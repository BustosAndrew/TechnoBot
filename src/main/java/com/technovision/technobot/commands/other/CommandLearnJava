import com.technovision.technobot.commands.Command;
import net.dv8tion.jda.api.EmbedBuilder;
import net.dv8tion.jda.api.events.message.MessageReceivedEvent;

public class CommandLearnJava extends Command{
  
  public CommandLearnJava() {
        super("learnjava", "Tells how learning Java is important for MinecraftModding", "{prefix}learnjava", Command.Category.OTHER);
    }
    
    
    @Override
    public boolean execute(MessageReceivedEvent event, String[] args) {
        event.getChannel().sendMessage(new EmbedBuilder().setTitle("Learn Java").setDescription("Why is learning Java important? Minecraft is a complex game, it uses various complex java features like functionalInterfaces, Suppliers and many more.. you can't expect to make a mod without knowing java thouroughly. By not learning java you are wasting your time and our time by asking silly questions which you could easily fix if you knew Java.. It is expected that you ask only API questions. Thanks and remember to learn java before starting to mod.").build().queue());
        return true;
    }

}
